<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/tds_bg_dark"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 첫 번째 줄: 심볼, 타입, 레버리지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/symbol_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BTCUSDT"
                android:textSize="16sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="롱"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/leverage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5x"
                android:textSize="12sp"
                android:textColor="@color/tds_text_secondary"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- 두 번째 줄: 진입 가격, 현재 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/entry_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="진입: $95,836.00"
                android:textSize="12sp"
                android:textColor="@color/tds_text_secondary" />

            <TextView
                android:id="@+id/current_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재: $96,432.02"
                android:textSize="12sp"
                android:textColor="@color/tds_text_secondary" />
        </LinearLayout>

        <!-- 세 번째 줄: 미실현 손익 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="미실현 손익"
                android:textSize="12sp"
                android:textColor="@color/tds_text_secondary" />

            <TextView
                android:id="@+id/pnl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$33.30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/pnl_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3.33%"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 네 번째 줄: 포지션 종료 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_close_position"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="포지션 종료"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_secondary"
            android:textColor="@color/tds_text_primary" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

