<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고급 리스크 관리"
                android:textSize="28sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="손실 한도 및 알림 설정을 관리하세요"
                android:textSize="14sp"
                android:textColor="@color/tds_text_secondary" />
        </LinearLayout>

        <!-- Daily Loss Limit -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일일 손실 한도"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정한 금액 이상 손실이 발생하면 해당 일자 트레이딩이 차단됩니다."
                    android:textSize="12sp"
                    android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/daily_loss_limit"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="500"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_primary"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/enable_daily_loss_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일일 손실 한도 활성화"
                    android:textSize="14sp"
                    android:textColor="@color/tds_text_primary"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Max Loss Percentage -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌별 최대 허용 손실률"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 자산 대비 손실률이 이 값을 초과하면 알림이 전송됩니다."
                    android:textSize="12sp"
                    android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/max_loss_percentage"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="10"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_primary"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/enable_max_loss_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최대 손실률 알림 활성화"
                    android:textSize="14sp"
                    android:textColor="@color/tds_text_primary"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Target Profit Notification -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 수익 알림"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 수익에 도달하면 알림을 받고, 부분 청산 또는 전량 청산을 선택할 수 있습니다."
                    android:textSize="12sp"
                    android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/target_profit"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="1000"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_primary"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/enable_target_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 수익 알림 활성화"
                    android:textSize="14sp"
                    android:textColor="@color/tds_text_primary"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cool Down Mode -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쿨다운 모드"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="손실 한도를 초과하면 일정 시간 동안 트레이딩이 차단됩니다."
                    android:textSize="12sp"
                    android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/cooldown_duration"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="60"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_primary"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:inputType="number"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:textSize="16sp"
                        android:textColor="@color/tds_text_secondary" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/enable_cooldown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쿨다운 모드 활성화"
                    android:textSize="14sp"
                    android:textColor="@color/tds_text_primary"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_risk_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="설정 저장"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:textColor="@color/tds_text_primary" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

