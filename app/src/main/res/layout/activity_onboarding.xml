<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black">

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/progress_dot_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/badge_background"
            android:backgroundTint="@color/tds_blue_400"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/progress_dot_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/badge_background"
            android:backgroundTint="@color/tds_text_tertiary"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/progress_dot_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/badge_background"
            android:backgroundTint="@color/tds_text_tertiary" />
    </LinearLayout>

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress_indicator"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Icon/Illustration -->
            <ImageView
                android:id="@+id/onboarding_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="@color/tds_blue_400" />

            <!-- Title -->
            <TextView
                android:id="@+id/onboarding_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R²에 오신 것을 환영합니다"
                android:textSize="28sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/onboarding_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R²는 수익률보다 리스크 관리 훈련에 초점을 둔 모의투자 앱입니다.\n\n실제 돈 없이도 거래 감각을 키우고, 위험을 관리하는 방법을 배울 수 있습니다."
                android:textSize="16sp"
                android:textColor="@color/tds_text_secondary"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Feature List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="✓"
                        android:textSize="18sp"
                        android:textColor="@color/tds_success_alt"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="실시간 리스크 스코어 모니터링"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_primary"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="✓"
                        android:textSize="18sp"
                        android:textColor="@color/tds_success_alt"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI 코치의 행동 패턴 분석"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_primary"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="✓"
                        android:textSize="18sp"
                        android:textColor="@color/tds_success_alt"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="안전한 모의투자 환경"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_primary"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="다음"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:textColor="@color/tds_text_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="건너뛰기"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="@color/tds_text_secondary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

