<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/tds_bg_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 첫 번째 줄: 심볼, 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

        <TextView
            android:id="@+id/symbol_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BTCUSDT"
            android:textSize="20sp"
            android:textColor="@color/tds_text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$95,836.00"
            android:textSize="20sp"
            android:textColor="@color/tds_text_primary"
            android:textStyle="bold" />
        </LinearLayout>
        
        <!-- 두 번째 줄: 타임프레임 선택 버튼들 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollbars="none"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="16dp"
            android:background="@color/tds_bg_dark">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="1m"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_5m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="5m"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_15m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="15m"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_30m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="30m"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1h"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="1h"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_4h"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="4h"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1d"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="1D"
                    android:textSize="12sp"
                    android:textColor="#d1d4dc"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Chart Area -->
    <WebView
        android:id="@+id/monitor_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/risk_gauge_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Risk Score Gauge (컴팩트) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/risk_gauge_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/tds_bg_dark"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/monitor_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/position_info_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk"
                android:textSize="10sp"
                android:textColor="@color/tds_text_secondary"
                android:layout_marginBottom="4dp" />

            <!-- Circular Progress Bar -->
            <ProgressBar
                android:id="@+id/risk_gauge_circular"
                android:layout_width="70dp"
                android:layout_height="70dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="75"
                android:progressDrawable="@drawable/risk_gauge_drawable"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/risk_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75/100"
                android:textSize="16sp"
                android:textColor="@color/risk_safe"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Position Info (컴팩트) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/position_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/tds_bg_dark"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/monitor_chart"
        app:layout_constraintStart_toEndOf="@id/risk_gauge_card"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포지션"
                android:textSize="11sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="진입가"
                    android:textSize="10sp"
                    android:textColor="@color/tds_text_secondary" />

                <TextView
                    android:id="@+id/entry_price_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$95,836.00"
                    android:textSize="11sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="손익"
                    android:textSize="10sp"
                    android:textColor="@color/tds_text_secondary" />

                <TextView
                    android:id="@+id/unrealized_pnl_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+$33.30"
                    android:textSize="11sp"
                    android:textColor="@color/tds_success_alt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="레버/마진"
                    android:textSize="10sp"
                    android:textColor="@color/tds_text_secondary" />

                <TextView
                    android:id="@+id/leverage_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5x"
                    android:textSize="11sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/margin_ratio_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125.5%"
                    android:textSize="11sp"
                    android:textColor="@color/tds_success_alt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Metrics Card (컴팩트) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/metrics_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/tds_bg_dark"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/risk_gauge_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:text="MDD"
                    android:textSize="10sp"
                        android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/mdd_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-5.2%"
                    android:textSize="14sp"
                        android:textColor="@color/tds_error_alt"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:text="오늘 손익"
                    android:textSize="10sp"
                        android:textColor="@color/tds_text_secondary"
                    android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/daily_pnl_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+$250.50"
                    android:textSize="14sp"
                        android:textColor="@color/tds_success_alt"
                        android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Margin Warning Banner (Conditional) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/margin_warning_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/tds_warning_alt"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/metrics_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⚠️ 마진 비율이 낮아지고 있습니다. 포지션 조정이 필요합니다."
                android:textSize="14sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_adjust_position"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="조정"
                android:textSize="12sp"
                android:background="@drawable/btn_secondary"
                android:textColor="@color/tds_text_primary"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Active Positions List -->
    <TextView
        android:id="@+id/positions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활성 포지션"
        android:textSize="18sp"
        android:textColor="@color/tds_text_primary"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/margin_warning_banner"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/positions_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/positions_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

