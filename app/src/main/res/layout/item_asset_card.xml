<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/tds_bg_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="false">

        <!-- Asset Icon -->
        <TextView
            android:id="@+id/asset_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â‚¿"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/badge_background"
            android:layout_marginEnd="16dp" />

        <!-- Asset Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/asset_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTCUSDT"
                android:textSize="18sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/asset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textSize="14sp"
                android:textColor="@color/tds_text_secondary" />
        </LinearLayout>

        <!-- Price Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/asset_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$95,836.00"
                android:textSize="16sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/asset_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.45%"
                android:textSize="12sp"
                android:textColor="@color/tds_success_alt" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

