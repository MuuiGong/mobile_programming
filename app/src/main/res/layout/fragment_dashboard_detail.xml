<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e222d">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- 헤더 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R² 대시보드"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#d1d4dc"
            android:layout_marginBottom="20dp" />
        
        <!-- 잔고 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#131722"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 잔고"
                    android:textSize="14sp"
                    android:textColor="#787b86"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100,000.00"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#26a69a" />
                
                <!-- 손익 및 통계 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 손익"
                            android:textSize="12sp"
                            android:textColor="#787b86" />
                        
                        <TextView
                            android:id="@+id/tv_total_pnl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#26a69a"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="승률"
                            android:textSize="12sp"
                            android:textColor="#787b86" />
                        
                        <TextView
                            android:id="@+id/tv_win_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#d1d4dc"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="거래 수"
                            android:textSize="12sp"
                            android:textColor="#787b86" />
                        
                        <TextView
                            android:id="@+id/tv_total_trades"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 거래"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#d1d4dc"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- 리스크 게이지 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#131722"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리스크 관리 상태"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#d1d4dc"
                    android:layout_marginBottom="16dp" />
                
                <com.example.rsquare.ui.common.RiskGaugeView
                    android:id="@+id/risk_gauge"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- 누적 손익 차트 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#131722"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="누적 손익 추이"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#d1d4dc"
                    android:layout_marginBottom="16dp" />
                
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/pnl_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- 최근 포지션 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#131722"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 거래"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#d1d4dc"
                    android:layout_marginBottom="12dp" />
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recent_positions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
    </LinearLayout>
</ScrollView>

