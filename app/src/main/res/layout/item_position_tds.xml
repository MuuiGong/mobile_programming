<?xml version="1.0" encoding="utf-8"?>
<!-- TDS ListRow 스타일 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/tds_spacing_4"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">
    
    <!-- 아이콘 영역 -->
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tds_circle_background"
        android:backgroundTint="@color/tds_blue_500" />
    
    <!-- 텍스트 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/tds_spacing_3">
        
        <TextView
            android:id="@+id/tv_position_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            style="@style/TDS_Text_Body1"
            android:textColor="@color/tds_gray_900" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tds_spacing_1">
            
            <TextView
                android:id="@+id/tv_position_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONG"
                style="@style/TDS_Text_Caption"
                android:textColor="@color/tds_gray_600" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/tds_gray_300"
                android:layout_marginStart="@dimen/tds_spacing_1"
                android:layout_marginEnd="@dimen/tds_spacing_1" />
            
            <TextView
                android:id="@+id/tv_position_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료"
                style="@style/TDS_Text_Caption"
                android:textColor="@color/tds_gray_600" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- 우측 금액 영역 -->
    <TextView
        android:id="@+id/tv_position_pnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+$1,234.56"
        style="@style/TDS_Text_Title3"
        android:textColor="@color/tds_profit" />
</LinearLayout>

