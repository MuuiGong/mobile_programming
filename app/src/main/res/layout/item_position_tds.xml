<?xml version="1.0" encoding="utf-8"?>
<!-- TDS ListRow 스타일 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/tds_spacing_4"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/tds_spacing_3">
    
    <!-- 아이콘 영역 (토스 스타일 - 더 부드러운 원형) -->
    <View
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/tds_circle_background"
        android:backgroundTint="@color/tds_blue_500"
        android:layout_marginEnd="@dimen/tds_spacing_3" />
    
    <!-- 텍스트 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_position_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC/USDT"
            style="@style/TDS_Text_Body1"
            android:textColor="@color/tds_text_primary_dark"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tds_spacing_1"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/tv_position_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="롱"
                style="@style/TDS_Text_Caption"
                android:textColor="@color/tds_blue_400"
                android:background="@color/tds_dark_surface"
                android:paddingHorizontal="@dimen/tds_spacing_2"
                android:paddingVertical="2dp" />
            
            <TextView
                android:id="@+id/tv_position_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 종료"
                style="@style/TDS_Text_Caption"
                android:textColor="@color/tds_text_tertiary_dark"
                android:layout_marginStart="@dimen/tds_spacing_2" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- 우측 금액 영역 (토스 스타일 - 더 큰 폰트) -->
    <TextView
        android:id="@+id/tv_position_pnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+$1,234.56"
        style="@style/TDS_Text_Title2"
        android:textColor="@color/tds_profit"
        android:textStyle="bold" />
</LinearLayout>

