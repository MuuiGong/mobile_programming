<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_background"
    android:fitsSystemWindows="true">
    
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <!-- TDS 스타일 Bottom Navigation (다크 모드) -->
    <!-- Material Components의 내부 색상 리소스 문제를 우회하기 위해 커스텀 LinearLayout 사용 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1e222d"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Dashboard -->
        <LinearLayout
            android:id="@+id/nav_item_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_icon_dashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                android:tint="#787b86" />
            <TextView
                android:id="@+id/nav_text_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대시보드"
                android:textSize="10sp"
                android:textColor="#787b86"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- Chart -->
        <LinearLayout
            android:id="@+id/nav_item_chart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_icon_chart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chart"
                android:tint="#787b86" />
            <TextView
                android:id="@+id/nav_text_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차트"
                android:textSize="10sp"
                android:textColor="#787b86"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- Journal -->
        <LinearLayout
            android:id="@+id/nav_item_journal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_icon_journal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_journal"
                android:tint="#787b86" />
            <TextView
                android:id="@+id/nav_text_journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저널"
                android:textSize="10sp"
                android:textColor="#787b86"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- Challenge -->
        <LinearLayout
            android:id="@+id/nav_item_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_icon_challenge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_challenge"
                android:tint="#787b86" />
            <TextView
                android:id="@+id/nav_text_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="챌린지"
                android:textSize="10sp"
                android:textColor="#787b86"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <!-- Coach -->
        <LinearLayout
            android:id="@+id/nav_item_coach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_icon_coach"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coach"
                android:tint="#787b86" />
            <TextView
                android:id="@+id/nav_text_coach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코치"
                android:textSize="10sp"
                android:textColor="#787b86"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>

