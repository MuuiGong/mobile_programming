<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tds_bg_dark"
        android:padding="@dimen/tds_spacing_4"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R² 리스크 트레이닝"
                style="@style/TDS_Text_Title1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수익이 아닌, 리스크 감각을 키우세요"
                style="@style/TDS_Text_Body2"
                android:layout_marginTop="@dimen/tds_spacing_1" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/tds_text_primary"
            android:contentDescription="설정"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- ScrollView (Content) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/tds_spacing_4">

            <!-- 1. 계정 현황 카드 -->
            <androidx.cardview.widget.CardView
                style="@style/TDS_Card_Glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계정 현황"
                        style="@style/TDS_Text_Body2"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_wallet"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/tds_text_primary" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/tds_spacing_3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="순자산"
                            style="@style/TDS_Text_Caption" />

                        <TextView
                            android:id="@+id/net_asset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10,250.50"
                            style="@style/TDS_Text_Body1"
                            android:textColor="@color/tds_success_alt"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/tds_spacing_2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="변화"
                            style="@style/TDS_Text_Caption" />

                        <TextView
                            android:id="@+id/change_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+$250.50 (+2.5%)"
                            style="@style/TDS_Text_Body2"
                            android:textColor="@color/tds_success_alt"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 2. Risk Score 카드 -->
            <androidx.cardview.widget.CardView
                style="@style/TDS_Card_Glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Risk Score"
                        style="@style/TDS_Text_Body2"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_shield"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/tds_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/tds_spacing_3"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/risk_score_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="75/100"
                            style="@style/TDS_Text_Title1"
                            android:textColor="@color/risk_safe"
                            android:textStyle="bold" />

                        <!-- 리스크 게이지 (ProgressBar) -->
                        <ProgressBar
                            android:id="@+id/risk_gauge"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="75"
                            android:progressDrawable="@drawable/risk_gauge_drawable" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0-30: 위험 | 31-70: 주의 | 71-100: 안정"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginTop="@dimen/tds_spacing_2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3. 활성 포지션 카드 -->
            <androidx.cardview.widget.CardView
                style="@style/TDS_Card_Glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="활성 포지션"
                            style="@style/TDS_Text_Body2"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_trending_up"
                            android:drawablePadding="8dp"
                            app:drawableTint="@color/tds_text_primary" />

                        <TextView
                            android:id="@+id/active_positions_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2개"
                            style="@style/TDS_Text_Body2"
                            android:textColor="@color/tds_text_primary"
                            android:background="@drawable/badge_background"
                            android:paddingHorizontal="@dimen/tds_spacing_2"
                            android:paddingVertical="@dimen/tds_spacing_1" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/active_positions_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tds_spacing_3"
                        android:orientation="vertical" />

                    <!-- 포지션 일괄 종료 버튼 -->
                    <TextView
                        android:id="@+id/btn_close_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="포지션 모두 종료"
                        style="@style/TDS_Text_Body2"
                        android:textColor="@color/tds_error"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 4. 오늘의 성과 카드 -->
            <androidx.cardview.widget.CardView
                style="@style/TDS_Card_Glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 성과"
                        style="@style/TDS_Text_Body2"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_target"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/tds_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/tds_spacing_3">

                        <!-- 거래 횟수 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="거래"
                                style="@style/TDS_Text_Caption" />

                            <TextView
                                android:id="@+id/today_trades_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5회"
                                style="@style/TDS_Text_Title3"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 승률 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="승률"
                                style="@style/TDS_Text_Caption" />

                            <TextView
                                android:id="@+id/today_win_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60%"
                                style="@style/TDS_Text_Title3"
                                android:textColor="@color/tds_success_alt"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 총 수익 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="총 수익"
                                style="@style/TDS_Text_Caption" />

                            <TextView
                                android:id="@+id/today_pnl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+$250.50"
                                style="@style/TDS_Text_Title3"
                                android:textColor="@color/tds_success_alt"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tds_bg_dark"
        android:gravity="center_vertical"
        android:padding="@dimen/tds_spacing_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 새 거래 -->
        <Button
            android:id="@+id/btn_new_trade"
            style="@style/TDS_Button_Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+ 새 거래"
            android:layout_marginEnd="@dimen/tds_spacing_1" />

        <!-- 기록 -->
        <Button
            android:id="@+id/btn_history"
            style="@style/TDS_Button_Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기록"
            android:layout_marginHorizontal="@dimen/tds_spacing_1" />

        <!-- 분석 -->
        <Button
            android:id="@+id/btn_analysis"
            style="@style/TDS_Button_Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분석"
            android:layout_marginStart="@dimen/tds_spacing_1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

