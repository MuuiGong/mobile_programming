<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/tds_spacing_5">

    <!-- Mock Metrics Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tds_spacing_5"
        app:cardBackgroundColor="@color/tds_bg_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/tds_spacing_4">

            <!-- R:R Ratio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/tds_spacing_3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R:R"
                    style="@style/TDS_Text_Caption"
                    android:textColor="@color/tds_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.50:1"
                    style="@style/TDS_Text_Title3"
                    android:textColor="@color/tds_success_alt" />
            </LinearLayout>

            <!-- Risk Score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Risk"
                    style="@style/TDS_Text_Caption"
                    android:textColor="@color/tds_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75/100"
                    style="@style/TDS_Text_Title3"
                    android:textColor="@color/tds_success_alt" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실시간 모니터링"
        style="@style/TDS_Text_Title1"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/tds_spacing_3" />

    <!-- Features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/tds_spacing_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• R:R 비율 자동 계산"
            style="@style/TDS_Text_Body1"
            android:textColor="@color/tds_text_secondary"
            android:layout_marginBottom="@dimen/tds_spacing_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 리스크 스코어 0-100"
            style="@style/TDS_Text_Body1"
            android:textColor="@color/tds_text_secondary"
            android:layout_marginBottom="@dimen/tds_spacing_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 청산 가격 실시간 계산"
            style="@style/TDS_Text_Body1"
            android:textColor="@color/tds_text_secondary" />
    </LinearLayout>

</LinearLayout>
