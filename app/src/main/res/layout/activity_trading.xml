<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/tds_bg_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/symbol_text"
                style="@style/TDS_Text_Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTCUSDT | 1H"
                android:textColor="@color/tds_text_primary" />

            <TextView
                android:id="@+id/timeframe_text"
                style="@style/TDS_Text_Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5x ë ˆë²„ë¦¬ì§€"
                android:textColor="@color/tds_text_secondary" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    
    <!-- íƒ€ìž„í”„ë ˆìž„ ì„ íƒ ë²„íŠ¼ë“¤ -->
    <HorizontalScrollView
        android:id="@+id/timeframe_scroll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/tds_spacing_4"
        android:background="@color/tds_bg_dark"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/tds_spacing_2"
            android:gravity="center_vertical">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_1m"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1m"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_5m"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="5m"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_15m"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="15m"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_30m"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="30m"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_1h"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1h"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_4h"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="4h"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time_1d"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1D"
                android:textSize="13sp"
                android:textColor="@color/tds_text_secondary"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- TradingView WebView -->
    <WebView
        android:id="@+id/trading_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/timeframe_scroll"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Control Panel (ScrollViewë¡œ ê°ì‹¸ì„œ ìž‘ê²Œ) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/control_panel"
        style="@style/TDS_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:layout_margin="@dimen/tds_spacing_1"
        android:layout_marginBottom="@dimen/tds_spacing_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="450dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/tds_spacing_2">

            <!-- Entry, TP, SL ê°€ê²© ìž…ë ¥ (3ì—´) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/tds_spacing_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entry"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />
                    <EditText
                        android:id="@+id/entry_price_input"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:hint="0.00"
                        android:textSize="12sp"
                        android:textColor="@color/tds_text_primary"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edit_text_background"
                        android:paddingHorizontal="@dimen/tds_spacing_2"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/tds_spacing_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TP"
                        style="@style/TDS_Text_Caption"
                        android:textColor="@color/tds_success_alt"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />
                    <EditText
                        android:id="@+id/tp_price_input"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:hint="0.00"
                        android:textSize="12sp"
                        android:textColor="@color/tds_success_alt"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edit_text_background"
                        android:paddingHorizontal="@dimen/tds_spacing_2"
                        android:paddingVertical="4dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/tds_spacing_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SL"
                        style="@style/TDS_Text_Caption"
                        android:textColor="@color/tds_error_alt"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />
                    <EditText
                        android:id="@+id/sl_price_input"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:hint="0.00"
                        android:textSize="12sp"
                        android:textColor="@color/tds_error_alt"
                        android:inputType="numberDecimal|numberSigned"
                        android:background="@drawable/edit_text_background"
                        android:paddingHorizontal="@dimen/tds_spacing_2"
                        android:paddingVertical="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Risk Amount & Margin Mode (í•œ ì¤„) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/tds_spacing_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ê±°ëž˜ ê¸ˆì•¡"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />
                    <EditText
                        android:id="@+id/risk_amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:hint="ìžë™"
                        android:textSize="12sp"
                        android:textColor="@color/tds_text_primary"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_background"
                        android:paddingHorizontal="@dimen/tds_spacing_2"
                        android:paddingVertical="4dp" />
                    
                    <!-- ë¦¬ìŠ¤í¬ ë¹„ìœ¨ ížŒíŠ¸ ë° ëª¨ë“œ ì¸ë””ì¼€ì´í„° -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <TextView
                            android:id="@+id/risk_percentage_hint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ìžë™: 2.0% = $200.00"
                            style="@style/TDS_Text_Caption"
                            android:textColor="@color/tds_text_tertiary"
                            android:textSize="11sp" />
                        
                        <TextView
                            android:id="@+id/mode_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤– ìžë™"
                            style="@style/TDS_Text_Caption"
                            android:textColor="@color/tds_blue_500"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/margin_mode_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/tds_spacing_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ë§ˆì§„ ëª¨ë“œ"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_margin_isolated"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Isolated"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/btn_outline"
                            android:layout_marginEnd="2dp" />
                        <Button
                            android:id="@+id/btn_margin_cross"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Cross"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/btn_primary"
                            android:layout_marginStart="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Leverage & Position Type -->
            <LinearLayout
                android:id="@+id/leverage_position_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/tds_spacing_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ë ˆë²„ë¦¬ì§€"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />

                    <Spinner
                        android:id="@+id/leverage_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/edit_text_background"
                        android:paddingHorizontal="@dimen/tds_spacing_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/tds_spacing_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="í¬ì§€ì…˜"
                        style="@style/TDS_Text_Caption"
                        android:layout_marginBottom="@dimen/tds_spacing_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_long"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ë¡±"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/btn_primary"
                            android:layout_marginEnd="2dp" />

                        <Button
                            android:id="@+id/btn_short"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ìˆ"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/btn_outline"
                            android:layout_marginStart="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- R:R Ratio, Risk Score & Liquidation (í•œ ì¤„) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/tds_spacing_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R:R"
                        style="@style/TDS_Text_Caption" />

                    <TextView
                        android:id="@+id/rr_ratio_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.24:1"
                        style="@style/TDS_Text_Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/tds_spacing_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Risk"
                        style="@style/TDS_Text_Caption" />

                    <TextView
                        android:id="@+id/risk_score_trading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75/100 ðŸŸ¢"
                        style="@style/TDS_Text_Body1"
                        android:textColor="@color/risk_safe"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liquidation_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/tds_spacing_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ì²­ì‚°ê°€"
                        style="@style/TDS_Text_Caption" />

                    <TextView
                        android:id="@+id/liquidation_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        style="@style/TDS_Text_Body2"
                        android:textColor="@color/tds_warning"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Entry Button -->
            <Button
                android:id="@+id/btn_enter_trade"
                style="@style/TDS_Button_Primary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ê±°ëž˜ ì§„ìž…"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/tds_spacing_1" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

