<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_background"
    android:fitsSystemWindows="true">
    
    <!-- 상단 헤더 (TradingView 스타일 컴팩트 툴바) -->
    <LinearLayout
        android:id="@+id/top_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/tds_background"
        android:elevation="4dp"
        android:paddingTop="@dimen/tds_spacing_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 첫 번째 줄: 심볼, 가격, 코인 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@color/tds_background">
            
            <TextView
                android:id="@+id/tv_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BTC/USD"
                android:textColor="#d1d4dc"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textColor="#26a69a"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />
            
            <ImageView
                android:id="@+id/btn_coin_selector"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="#787b86"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="코인 선택" />
        </LinearLayout>
        
        <!-- 두 번째 줄: 시간 단위, 차트 타입, 인디케이터, 도구 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:scrollbars="none"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="16dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical">
                
                <!-- 시간 단위 버튼들 (TradingView 스타일 - Material2 호환) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="1m"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_5m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="5m"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_15m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="15m"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_30m"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="30m"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1h"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="1h"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_4h"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="4h"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_1d"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="1D"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <!-- 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#2a2e39"
                    android:layout_marginHorizontal="4dp" />
                
                <!-- 차트 타입 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_chart_type"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="캔들"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <!-- 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#2a2e39"
                    android:layout_marginHorizontal="4dp" />
                
                <!-- 인디케이터 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_indicators"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="인디케이터"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                
                <!-- 드로잉 도구 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_drawing_tools"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="도구"
                    android:textSize="11sp"
                    android:textColor="#787b86"
                    android:minWidth="0dp"
                    android:paddingHorizontal="8dp"
                    android:backgroundTint="#1e222d"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    
    <!-- WebView 차트 -->
    <WebView
        android:id="@+id/chart_webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tds_background"
        app:layout_constraintTop_toBottomOf="@id/top_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_coordinator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <!-- BottomSheet를 위한 CoordinatorLayout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_sheet_coordinator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chart_webview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">
    
    <!-- 거래 패널 (드래그 가능한 BottomSheet) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/trading_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:maxHeight="400dp"
        style="@style/TDS_Card_Elevated"
        app:cardCornerRadius="20dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/tds_spacing_5">
            
            <!-- 핸들 바 -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@drawable/tds_handle_bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_4" />
            
            <!-- R:R 표시 (토스 스타일 - 더 세련된 배지) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/tds_dark_surface"
                android:padding="@dimen/tds_spacing_4"
                android:layout_marginBottom="@dimen/tds_spacing_4"
                android:paddingVertical="@dimen/tds_spacing_3">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R:R 비율"
                    style="@style/TDS_Text_Body1"
                    android:textColor="@color/tds_text_secondary_dark" />
                
                <TextView
                    android:id="@+id/tv_risk_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/TDS_Text_Title1"
                    android:textColor="@color/tds_blue_400"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <!-- 롱/숏 토글 (토스 스타일 - 더 세련된 세그먼트 컨트롤) -->
            <LinearLayout
                android:id="@+id/toggle_position_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tds_button_height_medium"
                android:layout_marginBottom="@dimen/tds_spacing_5"
                android:orientation="horizontal"
                android:background="@color/tds_dark_surface"
                android:padding="2dp">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_long"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="롱"
                    android:textColor="@color/tds_selector_text"
                    android:background="@drawable/tds_segmented_left"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp"
                    android:textStyle="bold" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_short"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="숏"
                    android:textColor="@color/tds_selector_text"
                    android:background="@drawable/tds_segmented_right"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            
            <!-- 입력 필드들 (TDS TextField 스타일) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TDS_TextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_3"
                android:hint="수량"
                app:boxBackgroundColor="@color/tds_card_background"
                app:boxStrokeColor="@color/tds_dark_border">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0.1"
                    android:textSize="@dimen/tds_text_body1" />
            </com.google.android.material.textfield.TextInputLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/tds_spacing_3">
                
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TDS_TextField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/tds_spacing_2"
                    android:hint="진입가"
                    app:boxBackgroundColor="@color/tds_card_background"
                app:boxStrokeColor="@color/tds_dark_border">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_entry_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/tds_text_body1" />
                </com.google.android.material.textfield.TextInputLayout>
                
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TDS_TextField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/tds_spacing_2"
                    android:hint="익절"
                    app:boxBackgroundColor="@color/tds_card_background"
                    app:boxStrokeColor="@color/tds_success">
                    
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_take_profit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/tds_text_body1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TDS_TextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tds_spacing_5"
                android:hint="손절"
                app:boxBackgroundColor="@color/tds_card_background"
                app:boxStrokeColor="@color/tds_error">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stop_loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/tds_text_body1" />
            </com.google.android.material.textfield.TextInputLayout>
            
            <!-- 포지션 열기 버튼 (토스 스타일 - 더 큰 버튼) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_position"
                style="@style/TDS_Button_Primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tds_button_height_large"
                android:text="포지션 열기"
                android:textStyle="bold"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>

