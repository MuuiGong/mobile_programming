<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fitsSystemWindows="true">

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/survey_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progress="33"
        android:progressTint="@color/tds_blue_400"
        android:progressBackgroundTint="@color/tds_bg_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/survey_progress"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/tds_spacing_5">

            <!-- Question Number -->
            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 5"
                style="@style/TDS_Text_Body2"
                android:textColor="@color/tds_text_tertiary"
                android:layout_marginBottom="@dimen/tds_spacing_4" />

            <!-- Question Title -->
            <TextView
                android:id="@+id/question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="투자 경험이 얼마나 되셨나요?"
                style="@style/TDS_Text_Title1"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/tds_spacing_6" />

            <!-- Options -->
            <LinearLayout
                android:id="@+id/options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Option 1 -->
                <androidx.cardview.widget.CardView
                    style="@style/TDS_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tds_spacing_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/tds_spacing_4"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="초보자 (1년 미만)"
                            style="@style/TDS_Text_Body1" />

                        <View
                            android:id="@+id/option_1_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/badge_background"
                            android:backgroundTint="@color/tds_text_tertiary"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Option 2 -->
                <androidx.cardview.widget.CardView
                    style="@style/TDS_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tds_spacing_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/tds_spacing_4"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="중급자 (1-3년)"
                            style="@style/TDS_Text_Body1" />

                        <View
                            android:id="@+id/option_2_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/badge_background"
                            android:backgroundTint="@color/tds_text_tertiary"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Option 3 -->
                <androidx.cardview.widget.CardView
                    style="@style/TDS_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tds_spacing_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/tds_spacing_4"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="고급자 (3년 이상)"
                            style="@style/TDS_Text_Body1" />

                        <View
                            android:id="@+id/option_3_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/badge_background"
                            android:backgroundTint="@color/tds_text_tertiary"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/tds_spacing_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_back"
            style="@style/TDS_Button_Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:layout_marginEnd="@dimen/tds_spacing_2" />

        <Button
            android:id="@+id/btn_next_survey"
            style="@style/TDS_Button_Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="다음"
            android:layout_marginStart="@dimen/tds_spacing_2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

