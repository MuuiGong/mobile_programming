<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tds_bg_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세션 리포트"
                android:textSize="28sp"
                android:textColor="@color/tds_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/session_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년 11월 16일"
                android:textSize="14sp"
                android:textColor="@color/tds_text_secondary" />
        </LinearLayout>

        <!-- Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요약"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 손익"
                            android:textSize="12sp"
                            android:textColor="@color/tds_text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/total_pnl_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+$250.55"
                            android:textSize="24sp"
                            android:textColor="@color/tds_success_alt"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="승률"
                            android:textSize="12sp"
                            android:textColor="@color/tds_text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/win_rate_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textSize="24sp"
                            android:textColor="@color/tds_success_alt"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 거래"
                            android:textSize="12sp"
                            android:textColor="@color/tds_text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/total_trades_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5회"
                            android:textSize="20sp"
                            android:textColor="@color/tds_text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최대 연속 손실"
                            android:textSize="12sp"
                            android:textColor="@color/tds_text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/max_consecutive_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2회"
                            android:textSize="20sp"
                            android:textColor="@color/tds_error_alt"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Risk Score Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균 Risk Score"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/avg_risk_gauge"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="75"
                        android:progressDrawable="@drawable/risk_gauge_drawable" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:id="@+id/avg_risk_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75/100"
                            android:textSize="28sp"
                            android:textColor="@color/risk_safe"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/avg_risk_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="안정"
                            android:textSize="14sp"
                            android:textColor="@color/risk_safe" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Most Risky Moment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가장 위험했던 순간"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="포지션"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_secondary" />

                    <TextView
                        android:id="@+id/risky_position_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETHUSDT"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_primary"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Risk Score"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_secondary" />

                    <TextView
                        android:id="@+id/risky_risk_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/100"
                        android:textSize="14sp"
                        android:textColor="@color/risk_danger"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="마진 비율"
                        android:textSize="14sp"
                        android:textColor="@color/tds_text_secondary" />

                    <TextView
                        android:id="@+id/risky_margin_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.2%"
                        android:textSize="14sp"
                        android:textColor="@color/tds_error_alt"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emotional Trading Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감정적 매매 의심 구간"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/emotional_trades_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Feedback Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/tds_bg_dark"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 한 줄 피드백"
                    android:textSize="18sp"
                    android:textColor="@color/tds_text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/daily_feedback_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="손실 이후 포지션 크기를 갑자기 키우는 경향이 있습니다. 일관된 포지션 크기를 유지하세요."
                    android:textSize="16sp"
                    android:textColor="@color/tds_text_secondary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btn_view_details"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="상세 분석 보기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:textColor="@color/tds_text_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_back_to_dashboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="대시보드로 돌아가기"
            android:textSize="16sp"
            android:background="@drawable/btn_secondary"
            android:textColor="@color/tds_text_primary" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

