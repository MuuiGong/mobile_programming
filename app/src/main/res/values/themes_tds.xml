<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TDS 기반 앱 테마 (OKX Exchange 스타일) -->
    <!-- Material2 사용 (BottomNavigationView 호환성) -->
    <style name="Theme.RSquare.TDS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (OKX Blue) -->
        <item name="colorPrimary">@color/tds_blue_400</item>
        <item name="colorPrimaryVariant">@color/tds_blue_500</item>
        <item name="colorOnPrimary">@color/tds_dark_background</item>
        
        <!-- Secondary brand color (OKX Green) -->
        <item name="colorSecondary">@color/tds_success</item>
        <item name="colorSecondaryVariant">@color/tds_success</item>
        <item name="colorOnSecondary">@color/tds_dark_background</item>
        
        <!-- Background colors (OKX Dark Theme #161722) -->
        <item name="android:windowBackground">@color/tds_bg_black</item>
        <item name="android:colorBackground">@color/tds_bg_black</item>
        <item name="colorSurface">@color/tds_dark_surface</item>
        <item name="colorOnSurface">@color/tds_text_primary_dark</item>
        
        <!-- Status bar (OKX Dark) -->
        <item name="android:statusBarColor">@color/tds_bg_black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar (OKX Dark) -->
        <item name="android:navigationBarColor">@color/tds_bg_black</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors (OKX Style) -->
        <item name="android:textColorPrimary">@color/tds_text_primary_dark</item>
        <item name="android:textColorSecondary">@color/tds_text_secondary_dark</item>
        
        <!-- Navigation Bar Colors (Material2 compatible - OKX Blue) -->
        <item name="colorControlNormal">@color/tds_text_tertiary_dark</item>
        <item name="colorControlActivated">@color/tds_blue_500</item>
        <item name="colorControlHighlight">#1a0075FF</item>
        <item name="android:textColorPrimaryInverse">@color/tds_text_primary_dark</item>
        <item name="android:textColorSecondaryInverse">@color/tds_text_secondary_dark</item>
        
        <!-- Material Components base colors (BottomNavigationView required) -->
        <item name="colorAccent">@color/tds_blue_500</item>
        <item name="android:textColor">@color/tds_text_primary_dark</item>
        <item name="android:textColorHint">@color/tds_text_secondary_dark</item>
        
        <!-- Material3 compatible colors -->
        <item name="colorSurfaceVariant">@color/tds_dark_surface_elevated</item>
        <item name="colorOnSurfaceVariant">@color/tds_text_secondary_dark</item>
        
        <!-- Shape appearances (Material2 compatible) -->
        <item name="shapeAppearanceSmallComponent">@style/TDS_ShapeAppearance_SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/TDS_ShapeAppearance_MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/TDS_ShapeAppearance_LargeComponent</item>
        
        <!-- TextInputLayout (Material Components required) -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        
        <!-- Material Components TextAppearance (Material2 compatible) -->
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>
    
    <!-- Bottom Navigation Style (Material2 compatible - OKX Style) -->
    <style name="TDS_BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/tds_navigation_item</item>
        <item name="itemTextColor">@color/tds_navigation_item</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:background">@color/tds_dark_surface</item>
        <item name="elevation">8dp</item>
        
        <!-- Material2 compatible colors (explicit definition) -->
        <item name="colorControlNormal">@color/tds_text_tertiary_dark</item>
        <item name="colorControlActivated">@color/tds_blue_500</item>
        <item name="colorControlHighlight">#1a0075FF</item>
        <item name="colorAccent">@color/tds_blue_500</item>
    </style>
    
    <!-- Bottom Navigation Theme (createDefaultColorStateList fix) -->
    <style name="TDS_BottomNavigation_Theme" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/tds_text_tertiary_dark</item>
        <item name="colorControlActivated">@color/tds_blue_500</item>
        <item name="colorControlHighlight">#1a0075FF</item>
        <item name="colorAccent">@color/tds_blue_500</item>
        <item name="android:textColorPrimary">@color/tds_text_primary_dark</item>
        <item name="android:textColorSecondary">@color/tds_text_secondary_dark</item>
    </style>
    
    <!-- Shape Appearances (Material2 compatible) -->
    <style name="TDS_ShapeAppearance_SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/tds_radius_small</item>
    </style>
    
    <style name="TDS_ShapeAppearance_MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/tds_radius_medium</item>
    </style>
    
    <style name="TDS_ShapeAppearance_LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/tds_radius_large</item>
    </style>
</resources>
