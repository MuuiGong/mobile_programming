    <color name="premium_bg_surface_light">#2C303E</color> <!-- Lighter Slate -->
    
    <!-- Brand Gradients (Start/End colors for gradients) -->
    <color name="premium_gradient_blue_start">#3366FF</color> <!-- Softer Blue -->
    <color name="premium_gradient_blue_end">#1939B7</color>
    <color name="premium_gradient_green_start">#00C853</color> <!-- Natural Green -->
