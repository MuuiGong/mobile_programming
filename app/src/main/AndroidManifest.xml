<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".RSquareApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RSquare.TDS"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RSquare.TDS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.trading.TradingActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.analysis.AnalysisActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.liquidation.LiquidationWarningActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS" />
        
        <activity
            android:name=".ui.onboarding.SurveyActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.onboarding.OnboardingActivity" />
        
        <activity
            android:name=".ui.asset.AssetSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.monitor.TradingMonitorActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.report.SessionReportActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.portfolio.PortfolioActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.backtest.BacktestActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.settings.DashboardSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.settings.RiskSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.coach.AICoachActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.export.ExportActivity"
            android:exported="false"
            android:theme="@style/Theme.RSquare.TDS"
            android:parentActivityName=".ui.MainActivity" />
        
    </application>

</manifest>